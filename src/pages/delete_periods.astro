---
import Layout from "../layouts/Layout.astro";
---

<Layout title_p="Sistema Escolar || Delete Periods" spanText="Eliminar Periodo">
    <section class="content columContent" style="display:flex; justify-content:center;">
  <div class="form-data">
    <div class="head">
      <h1>Atención</h1>
    </div>
    <div class="delete">
      <h1>¿Estas seguro?</h1>
      <h2>¡Se borrará de forma permanente!</h2>
      <div class="buttonc">
      <button id="btnYesDelete" class="btn-si" type="submit" autofocus=""
        >¡Si, bórralo!</button
      >
      <button
        id="btnNoDelete"
        class="btn-no"
        name="btn"
        value="form_default"
        type="submit">Cancelar</button
      >
    </div>
    </div>
  </div>
</section>
</Layout>

<style>
  /*-------------------------------------------
  Formulario | Delete
-------------------------------------------*/

@media (max-width: 856px){
    .buttonc {
    align-items: center;
    margin: 25px 14px;
    display: flex;
    justify-content: center;
}
    .buttonc .btn-si{
        margin:0px 30px !important;
    }

    .buttonc .btn-no{
        margin: 0px 30px !important;
    }

}



.form-data {
    position: relative;
    float: left;
    margin: 0 0 35px 0;
    width: 71%;
    background: var(--bacgroundContent);
    box-shadow: 0 2px 2px rgba(73, 80, 104, 0.4);
    border-radius: 0.4em;
    user-select: none;
}

.form-data .head {
    padding: 14px 0;
    border-bottom: 1px solid #282a3660;
}

.form-data .head h1 {
    color: #eef4ff;
    font-size: 1em;
    text-shadow: 0 1px 5px rgba(142, 136, 192, 0.2);
    text-align: center;
    font-weight: 500;
    text-transform: capitalize;
}

.form-data .body .wrap {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-evenly;
    padding: 4% 0 0 0;
}

.form-data .body .first,
.form-data .body .last {
    width: 44%;
}

.form-data .body .content-full {
    display: block;
    width: 92%;
}

.form-data .body .content-full .select2-container .select2-selection--single .select2-selection__rendered {
    padding: 0 1.5% !important;
}

.form-data .body .content-full .select2-container--default .select2-selection--single .select2-selection__arrow {
    right: 1%;
    width: 20px;
}

.form-data .body .label {
    display: block;
    margin: 0 0 6px 0;
    color: #eef4ff;
    text-shadow: 0 1px 5px rgba(142, 136, 192, 0.2);
    font-size: 0.9em;
    font-weight: 500;
    text-transform: none;
}

.form-data .body .text {
    width: 94%;
    height: 36px;
    margin: 0 0 25px 0;
    padding: 0 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    font-weight: 500;
    font-size: 0.9em;
    transition: all 300ms ease-out;
}

.form-data .body .textarea {
    display: block;
    width: 203.1%;
    min-height: 50px;
    max-height: 120px;
    margin: 0 0 20px 0;
    padding: 6px 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    line-height: 1.7;
    font-family: Helvetica Neue”, Helvetica, Arial, sans-serif;
    font-size: 0.9em;
    font-weight: 500;
    text-align: justify;
    resize: vertical;
    transition: all 300ms ease-out;
}

.form-data .body .date {
    width: 94%;
    height: 36px;
    margin: 0 0 25px 0;
    padding: 0 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    font-family: Helvetica Neue”, Helvetica, Arial, sans-serif;
    font-size: 0.9em;
    font-weight: 500;
    transition: all 300ms ease-out;
}

.form-data .body [type="date"]::-webkit-inner-spin-button {
    display: none;
}

.form-data .body [type="date"]::-webkit-calendar-picker-indicator {
    opacity: 1;
}

  .form-data .delete {
    margin: 20px 0 35px 0;
    text-align: center;
  }

  .form-data .delete h1 {
    color: #eef4ff;
    font-size: 1.3em;
    text-transform: initial;
    font-weight: 600;
  }

  .form-data .delete h2 {
    margin-top: 8px;
    color: #eef4ff;
    font-size: 1em;
    text-transform: initial;
    font-weight: 500;
  }

  .form-data .delete .btn-si {
    float: left;
    margin: 22px 0 25px 20%;
    width: 120px;
    height: 38px;
    background: #db4949;
    box-shadow: 0 1px 6px rgba(219, 73, 73, 0.2);
    border: none;
    border-color: #e77f7f;
    border-radius: 0.4em;
    color: #eef4ff;
    font-size: 0.9em;
    cursor: pointer;
    transition: all 300ms ease-out;
  }

  .form-data .delete .btn-si:hover,
  .form-data .delete .btn-si:focus {
    border: 4px solid #e77f7f;
    background: #aa3535;
    color: #eef4ff98;
    transition: all 200ms ease-in;
  }

  .form-data .delete .btn-si:active {
    background: #db4949;
    transition: all 200ms ease-in;
  }

  .form-data .delete .btn-no {
    float: right;
    margin: 22px 20% 25px 0;
    width: 120px;
    height: 38px;
    background: #3f6992;
    box-shadow: 0 1px 6px rgba(63, 105, 146, 0.2);
    border: none;
    border-color: #7eb2e2;
    border-radius: 0.4em;
    color: #eef4ff;
    font-size: 0.9em;
    cursor: pointer;
    transition: all 300ms ease-out;
  }

  @media (max-width: 990px) {
    .form-data .delete .btn-no {
      margin: 22px 29% 25px 0;
    }
    .form-data .delete .btn-si {
      margin: 22px 0 25px 29%;
    }
  }

  @media only screen and (max-width: 436px) {
    .form-data .delete .btn-no {
      margin: 22px 6% 25px 0;
    }
    .form-data .delete .btn-si {
      margin: 22px 0 25px 6%;
    }
    .form-data .delete .btn-no {
      margin: 22px 6% 25px 0;
    }
  }
  @media only screen and (max-width: 500px) {
    .form-data .delete .btn-si {
    margin: 20px 20px !important;
}
    .buttonc{
        padding:15px;
        flex-direction: column;
    }

    .form-data{
        width: 100%;
    }

    .form-data .delete .btn-no {
      margin: 0px !important;
    }
    .form-data .delete .btn-si {
      margin: 22px 0 25px 40% ;
    }
  }
  .form-data .delete .btn-no:hover,
  .form-data .delete .btn-no:focus {
    border: 4px solid #7eb2e2;
    background: #2a4866;
    color: #eef4ff98;
    transition: all 200ms ease-in;
  }

  .form-data .delete .btn-no:active {
    background: #3f6992;
    transition: all 200ms ease-in;
  }
  @media only screen and (max-width: 641px) {
    .form-data .delete .btn-si {
      margin: 22px 0 25px 20%;
    }
  }
</style>
