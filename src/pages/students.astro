</Layout>


<style>
@media only screen and (max-width: 1186px){
    .content {
    flex-flow: column;
}

}
.tittleLottie {
    width: 100%;
    text-align: center;
    padding: 30px 8px;
}
.containerLotttie {
    width: 68%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background: var(--bacgroundContent);
    box-shadow: 0 2px 2px rgba(73,80,104,0.4);
    border-radius: 0.4em;
    margin: 0px 20px;
    position: relative;
    padding: 20px 20px;
    overflow-x:hidden;
}
.tittleLottie h2 {
    font-size: 2.4em;
    color: #fff;
}

@media only screen and (max-width: 990px){
  .containerLotttie {
    width: 100%;
  }
}
@media only screen and (max-width: 500px){
  .lottie{
    width:400px !important;
  }
}


</style>