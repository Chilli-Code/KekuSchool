<script>
    import Swal from 'sweetalert2/dist/sweetalert2.js';
    import 'sweetalert2/src/sweetalert2.scss';

    const buttonInfo = document.getElementById('ButtonInfo');
    buttonInfo.addEventListener('click', () => {
      Swal.fire({
        title: 'Informacion',
        // text: 'Este es un mensaje de SweetAlert2',
        html: `
        <div class="contInfoW">
            <p>Nombre:</p> <br/>
            <p>Curso:</p> <br/>
            <p>Numero De Telefono:</p> <br/>
            <p>Acudiente:</p> <br/>
            <p>Numero Del Acudiente:</p> <br/>
            <p>Jornada:</p> <br/>
        </div>
        `,
        icon: 'info',
        confirmButtonText: "Editar",
        allowOutsideClick: false,
        showCancelButton: true,
        cancelButtonText:'Cerrar',
        cancelButtonColor: "#d33",
        footer: 'Vista Previa de la informacion de los Alumnos',

        customClass: {
            htmlContainer: 'contInfoW',
      },

        showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
      });
    });

    const ButtonFallas = document.getElementById('ButtonFallas');
    ButtonFallas.addEventListener('click', () => {
      Swal.fire({
        title: 'Fallas',
        text: 'Este es un mensaje de SweetAlert2',
        icon: 'question',
        confirmButtonText: 'Â¡Entendido!'
      });
    });
    const ButtonDocente = document.getElementById('ButtonDocente');
    ButtonDocente.addEventListener('click', () => {
      Swal.fire({
        title: 'Docente Encargado',
        text: 'Este es un mensaje de SweetAlert2',
        icon: 'info',
        confirmButtonText: 'Â¡Entendido!',
        allowOutsideClick: false
      });
    });
</script>

<style>
