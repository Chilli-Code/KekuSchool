    flex-direction: column;
    justify-content: center;
    align-items: center;
}


.image-2 {
    transition: all 200ms ease-in-out; 
}

.image-2:hover {
    cursor: pointer;
    transform: scale(1.3); 
}

.image-2:hover::after {
    content: '';
    position: absolute;
    border-radius:50%;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    transition: background-color 200ms ease-in-out;
}

.image-2:hover::after {
    background-color: rgb(0 0 0 / 23%);
}

.image-2:hover + .adnnin{
    font-size:1.5em;
    font-weight: 600;
}


.container-img2{
    display: flex;
    width: 30%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container-img {
    display: flex;
    width:100%;
