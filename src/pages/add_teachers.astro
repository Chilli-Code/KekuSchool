---

import Layout from "../layouts/Layout.astro";

---

<Layout title_p="Sistema Escolar || Teachers" spanText="Agregar || Docentes">
    <section class="content columContent">
        <div class="content-aside">
            <div class="form-options">
                <div class="options">
                    <div> <button style="text-decoration: none; " class="btn btn-requerid icon btn-disabled" disabled="">add</button>
                    </div>
                    <div><a href="#" style="text-decoration: none;" class="btn btn-requerid icon" name="btn" type="submit" >code</a>
                    </div>
                    <div>
                        <a href="#" style="text-decoration: none;" class="btn btn-requerid icon" name="btn" type="submit">print</a>
                    </div>
                    <a href="#" style="text-decoration: none;" class="btn btn-search-mobile icon">search</a>
                    <div>
                        <a href="/teachers" style="text-decoration: none;" class="btn btn-exit icon">close</a>
                    </div>
                </div>
            </div>
            </div>
            <div class="form-data">
                <div class="head">
                    <h1 class="titulo">Agregar</h1>
                </div>
                <div class="body">
                    <form>
                        <div class="wrap">
                            <div class="first">
                                <label class="label">Nombres</label>
                                <input class="text" type="text" required="" autofocus="">
                                <label class="label">Apellidos</label>
                                <input class="text" type="text" required="">
                                <label class="label">Fecha de nacimiento</label>
                                <input class="date" type="text" placeholder="aaaa-mm-dd" required="">
                                <label class="label">Género</label>
                                <select class="select" style="width:94%;">
                                    <option value="mujer">Mujer</option>
                                    <option value="hombre">Hombre</option>

                                </select>
                                <label class="label">Numero Identifiacion</label>
                                <input class="text" type="number" placeholder="C.C" required="">
                            </div>
                            <div class="last">
                                <label class="label">Número de teléfono</label>
                                <input class="text" type="number" placeholder="+57 12345" title="Ingresa un número de teléfono válido." maxlength="10" required="">
                                <label class="label">Jornada</label>
                                <select class="select" style="width:94%;">
                                    <option value="Manana">Manana</option>
                                    <option value="Tarde">Tarde</option>
                                </select>
                                <label class="label">Materia Principal</label>
                                <select class="select" style="width:94%;">
                                    <option value="Matematicas">Matematicas</option>
                                    <option value="Filosofia">Filosofia</option>
                                    <option value="Ingles">Ingles</option>
                                    <option value="Sociales">Sociales</option>
                                    <option value="Quimica">Quimica</option>
                                </select>
                                <label class="label">Curso Asignado</label>
                                <select class="select" style="width:94%;">
                                    <option value="Ninguno">Ninguno</option>
                                    <option value="9A">9A</option>
                                    <option value="8B">8B</option>
                                    <option value="10B">10B</option>
                                    <option value="11A">11A</option>
                                </select>
                                <label class="label">Contraseña</label>
                                <input class="text" type="text" name="txtrfc" placeholder="*******" required="">
                            </div>
                        </div>
                        <button class="btn icon" type="submit">save</button>
                    </form>
                </div>
            </div>

    </section>
</Layout>


<style>
       /*-------------------------------------------
Formulario | Add / Update
-------------------------------------------*/

.form-data{
    overflow-x: hidden;
    position: relative;
    float: left;
    margin: 0 0 35px 0;
    width: 71%;
    background: var(--bacgroundContent);
    box-shadow: 0 2px 2px rgba(73, 80, 104, 0.4);
    border-radius: 0.4em;
    user-select: none;
}

.form-data .head {
    padding: 14px 0;
    border-bottom: 1px solid #282a3660;
}

.form-data .head h1 {
    color: #eef4ff;
    font-size: 1em;
    text-shadow: 0 1px 5px rgba(142, 136, 192, 0.2);
    text-align: center;
    font-weight: 500;
    text-transform: capitalize;
}

.form-data .body .wrap {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-evenly;
    padding: 4% 0 0 0;
}

.form-data .body .first,
.form-data .body .last {
    width: 44%;
}

.form-data .body .content-full {
    display: block;
    width: 92%;
}

.form-data .body .content-full .select2-container .select2-selection--single .select2-selection__rendered {
    padding: 0 1.5% !important;
}

.form-data .body .content-full .select2-container--default .select2-selection--single .select2-selection__arrow {
    right: 1%;
    width: 20px;
}

.form-data .body .label {
    display: block;
    margin: 0 0 6px 0;
    color: #eef4ff;
    text-shadow: 0 1px 5px rgba(142, 136, 192, 0.2);
    font-size: 0.9em;
    font-weight: 500;
    text-transform: none;
}

.form-data .body .text {
    width: 94%;
    height: 36px;
    margin: 0 0 25px 0;
    padding: 0 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    font-weight: 500;
    font-size: 0.9em;
    transition: all 300ms ease-out;
}

.form-data .body input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;

    }
.form-data .body .textarea {
    display: block;
    width: 203.1%;
    min-height: 50px;
    max-height: 120px;
    margin: 0 0 20px 0;
    padding: 6px 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    line-height: 1.7;
    font-family: Helvetica Neue”, Helvetica, Arial, sans-serif;
    font-size: 0.9em;
    font-weight: 500;
    text-align: justify;
    resize: vertical;
    transition: all 300ms ease-out;
}

.form-data .body .date {
    width: 94%;
    height: 36px;
    margin: 0 0 25px 0;
    padding: 0 3%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    font-family: Helvetica Neue”, Helvetica, Arial, sans-serif;
    font-size: 0.9em;
    font-weight: 500;
    transition: all 300ms ease-out;
}

.form-data .body [type="date"]::-webkit-inner-spin-button {
    display: none;
}

.form-data .body [type="date"]::-webkit-calendar-picker-indicator {
    opacity: 1;
}



.form-data .body .btn {
    display: block;
    float: right;
    width: 50px;
    height: 50px;
    margin: 0;
    padding: 8px 0 0 8px;
    background: var(--backgroundBtnList);
    box-shadow: -1px -1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-color: #929cb9;
    border-top-left-radius: 100%;
    border-bottom-right-radius: 0.4em;
    color: var(--colorIcon);
    text-shadow: none;
    font-size: 1.1em;
    cursor: pointer;
    transition: all 300ms ease-out;
}



.form-data .body .btn.back {
    display: block;
    float: left;
    padding: 8px 8px 0 0;
    border-top-left-radius: 0;
    border-top-right-radius: 100%;
    border-bottom-left-radius: 0.4em;
    border-bottom-right-radius: 0;
}

.form-data .body .btn.icon {
    text-shadow: 0 -1px 5px rgb(142, 136, 192, 0.2);
}

.form-data .body .btn:hover,
.form-data .body .btn:focus {
    background: var(--colorhr);
    border: 4px solid var(--backgroundBtnFocusShearch);
    color: #eef4ff98;
    transition: all 200ms ease-in;
}

.form-data .body .btn:active {
    background: #6272a4;
    transition: all 200ms ease-in;
}

.text:focus, .textarea:focus, .date:focus, .select:focus {
    outline: none !important;
    outline-width: 0 !important;
    color: #4a567c !important;
    box-shadow: 0 0 0 2.5pt var(--backgroundBtnShearch) !important;
    transition: all 200ms ease-in;
}


.form-data .body .select {
    width: 100%;
    height: 36px;
    margin: 0 0 25px 0;
    padding: 0 1%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-radius: 0.4em;
    color: #687292;
    font-family: Helvetica Neue”, Helvetica, Arial, sans-serif;
    font-size: 0.9em;
    font-weight: 500;
    transition: all 300ms ease-out;
}

.form-data .body .select option {
    color: #4a567c;
    font-weight: 500;
}

@media (max-width:990px){
    .form-data{
        width: 100% !important;
    }
}

@media only screen and (max-width: 701px) {
    .info-title {
        width: 59.5%;
    }
    .info-title .title {
        margin-left: 8%;
    }
    .form-data .body .first,
    .form-data .body .last,
    .form-data .body .description {
        width: 88%;
    }
    .form-data .body .content-full {
        width: 88%;
    }
    .form-data .body .content-full .select2-container .select2-selection--single .select2-selection__rendered {
        padding: 0 3% !important;
    }
    .form-data .body .content-full .select2-container--default .select2-selection--single .select2-selection__arrow {
        right: 2%;
        width: 20px;
    }
    .form-data .body .content-full .select2-container .select2-search--inline .select2-search__field {
        margin-left: 3%;
    }
    .form-data .body .textarea {
        width: 94%;
        padding: 6px 3%;
    }
    .form-data .body .description .textarea {
        width: 94%;
        padding: 6px 3%;
    }
    .form-gridview .pages ul li button {
        width: 5%;
    }
    .form-config-user .body .first,
    .form-config-user .body .last {
        width: 87.5%;
    }
    .form-config-user .body .first {
        padding: 24px 0 2%;
    }
    .form-config-user .body .footer {
        padding: 24px 0 24px;
    }
    .form-config-user .body .config-data-user .btn-edit-info-user,
    .form-config-user .body .config-data-user .btn-change-pass {
        width: 90.9%;
        height: 36px;
        padding-left: 9%;
    }
    .form-config-user .body .section-croppie-image,
    .form-data .body .section-croppie-image {
        padding: 24px 0 0;
    }
    .form-config-user .body .section-croppie-image .options {
        padding: 10px 0 24px;
    }
    .form-config-user .body .section-croppie-image .cr-slider {
        padding-bottom: 8px;
    }
}
</style>