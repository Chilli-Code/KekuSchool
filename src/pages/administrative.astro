---
import Layout from "../layouts/Layout.astro";
import TableAdministrative from "../components/Table_Administrative.astro";
---

<Layout title_p="Sistema Escolar || administrative" spanText="administrativos" />
  <section class="content">
    <div class="content-aside" id="jjj">
      <div class="form-options">
        <div class="options">
          <div>
            <a
              href="/add_administrative"
              style="text-decoration: none;"
              class="btn btn-add icon activateOption activateOptionPeriods"
              >add</a
            >
          </div>
          <div>
            <a
              href="#"
              style="text-decoration: none;"
              class="btn btn-disabled icon"
              type="submit">code</a
            >
          </div>
          <div>
            <a
              href="#"
              style="text-decoration: none;"
              class="btn btn-disabled icon"
              type="submit">print</a
            >
          </div>
          <a
            href="#"
            style="text-decoration: none;"
            class="btn btn-search-mobile icon">search</a
          >
          <div>
            <a
              href="/login"
              style="text-decoration: none;"
              class="btn btn-exit icon">exit_to_app</a
            >
          </div>
        </div>
        <div class="search">
          <div class="barra">
            <input
              type="text"
              class="text-search"
              placeholder="Buscar..."
              autofocus=""
            />
            <button id="btnSearch" class="btn-search icon" type="submit"
              >search</button
            >
          </div>
        </div>
      </div>
    </div>

      <TableAdministrative />

  </section>
</Layout>

<style>


/*-------------------------------------------
  Contenedor Formularios
-------------------------------------------*/

.content {
    display: block;
    float: right;
    margin: 0 3%;
    width: 72%;
}

.content-aside {
    display: block;
    float: right;
    width: 27%;
}

.content:after,
.content-aside:after {
    display: block;
    content: "";
    clear: both;
}
@media only screen and (max-width: 990px) {
    .content {
        float: none;
        width: 94%;
        display: flex;
        flex-flow: column-reverse;
    }
    .content-aside{
        width:100% !important;
    }

}

@media only screen and (max-width: 1186px) {
    .content {
    flex-direction: column !important;
    display: flex;
    align-items: center;
    flex-flow: column-reverse;
}
.content-aside{
    margin-bottom:20px;
}
.content-aside{
    width:60%;
}
}


@media(max-width:278px){
    .content{
        width: 300px !important;
    }
}

/*-------------------------------------------
  Formulario | Herramientas
-------------------------------------------*/

.form-options {
    width: 100%;
    background: var(--bacgroundContent);
    box-shadow: 0 2px 2px rgba(73, 80, 104, 0.4);
    border-radius: 0.4em;
    user-select: none;
}

.form-options .options {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    border-bottom: 1px solid var(--borderColorHr);
    padding: 5% 10%;
}

.form-options .options .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    /* display: block; */
    width: 40px;
    height: 40px;
    color: #eef4ff;
    font-size: 1em;
    border: none;
    border-radius: 100%;
    cursor: pointer;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
}

.form-options .options .btn.btn-disabled,
.form-options .search .btn-search.btn-disabled {
    background: var(--backgroundBtnDisabled);
    color: #eef4ff98;
    cursor: initial;
    pointer-events: none;
}

.form-options .options .btn-add {
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 1px 6px rgba(91, 133, 127, 0.2);
    background: #569188;
    border-color: #6daaa3;
    transition: all 300ms ease-out;
}

.form-options .options .btn-add:hover,
.form-options .options .btn-add:focus {
    background: #456661;
    border: 4px solid #6daaa3;
    color: #eef4ff98;
    transition: all 200ms ease-in;
}

.form-options .options .btn-add:active {
    background: #569188;
    transition: all 200ms ease-in;
}

.form-options .options .btn-exit {
    box-shadow: 0 1px 6px rgba(219, 73, 73, 0.2);
    background: #db4949;
    border-color: #e77f7f;
    transition: all 300ms ease-out;
}

.form-options .options .btn-exit:hover,
.form-options .options .btn-exit:focus {
    background: #aa3535;
    border: 4px solid #e77f7f;
    color: #eef4ff98;
    transition: all 200ms ease-in;
}

.form-options .options .btn-exit:active {
    background: #db4949;
    transition: all 200ms ease-in;
}

.form-options .options .btn-search-mobile {
    display: none;
    box-shadow: 0 1px 6px rgba(73, 100, 219, 0.2);
    background: #6272a4;
    border-color: #929cb9;
    transition: all 300ms ease-out;
}

.form-options .options .btn-search-mobile:hover,
.form-options .options .btn-search-mobile:focus {
    background: #4a567c;
    border: 4px solid #929cb9;
    color: #eef4ff98;
    transition: all 200ms ease-in;
}

.form-options .options .btn-search-mobile:active {
    background: #6272a4;
    transition: all 200ms ease-in;
}

.form-options .search {
    padding: 20px 0;
}

.form-options .search .barra{
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-options .search:after {
    display: block;
    content: "";
    clear: both;
}

.form-options .search .text-search {
    float: left;
    width: 57%;
    height: 36px;
    margin: 0 0 0 7.9%;
    padding: 0 23.5% 0 3.5%;
    background: #eef4ff;
    box-shadow: 0 1px 6px rgba(142, 136, 192, 0.2);
    border: none;
    border-top-left-radius: 0.4em;
    border-bottom-left-radius: 0.4em;
    border-top-right-radius: 0.55em;
    border-bottom-right-radius: 0.55em;
    color: #687292;
    font-weight: 500;
    font-size: 0.9em;
    transition: all 300ms ease-out;
    outline: none !important;
    outline-width: 0 !important;
    transition: all 300ms ease-out;
}

.form-options .search .text-search:focus {
    box-shadow: 0 0 0 2.5pt var(--backgroundBtnFocusShearch) !important;
    color: #4a567c !important;
    transition: all 200ms ease-in;
}

.form-options .search .btn-search {
    float: left;
    width: 20%;
    height: 36px;
    margin: 0 6.5% 0 -20%;
    background: var(--backgroundBtnShearch);
    border: none;
    color: #eef4ff;
    cursor: initial;
    border-top-right-radius: 0.4em;
    border-bottom-right-radius: 0.4em;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    font-size: 1.02em;
    cursor: pointer;
    transition: all 300ms ease-out;
}

.form-options .search .btn-search:hover,
.form-options .search .btn-search:focus {
    background: var(--colorhr);
    box-shadow: inset 0 0 0 2.5pt var(--backgroundFocusInput) !important;
    color: #eef4ff98;
    transition: all 200ms ease-in;
}

.form-options .search .btn-search:hover:active {
    background: var(--backgroundBtnShearch);
    transition: all 200ms ease-in;
}

</style>
