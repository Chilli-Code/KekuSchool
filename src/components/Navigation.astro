---
interface Props {
    spanText: string;
}

const { spanText } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const isActive = (paths) => paths.includes(currentPath);
---
<layout>
    <header class="header">
        <div class="info-title">
            <span class="title">{spanText}</span>
        </div>
        <div class="info-school-period">
            <span class="school-period">Periodo Escolar /
                <a id="schoolPeriod" href="/periods">2022-1</a>
            </span>
        </div>
    </header>
<aside class="aside">
    <div class="nav-home">
        <a href="/"><span class="name_system">Control de Asistencias</span></a>
        <div class="user">
            <img class="image_user" src="/img/user.png" alt="imagen user">
            <span class="name_user">Nombre Admin</span>
            <span class="logout_user">
                <a class="icon" href="#">expand_more</a>
                <ul>
                    <li>
                        <a class="" style="border-bottom: 3px solid var(--backgroundBtnList);" href="/setting"><span
                                class="icon">settings</span>Configuración</a>
                    </li>
                    <li>
                        <a href="/login"><span class="icon">logout</span>Cerrar sesión</a>
                    </li>
                </ul>
            </span>
        </div>
        <ul>
            <li>
                <a href="/" class={currentPath === "" ? "active" : ""} href="/"><span class="icon">dashboard</span>Inicio</a>
            </li>
            <li>
                <a  href="/periods"  class={isActive(["periods", "add_period", "edit_periods"]) ? "active" : ""} ><span class="icon">date_range</span>Periodo Escolar</a>
            </li>
            <li>
