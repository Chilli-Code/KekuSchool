    99% {
        opacity: 0.99;
    }
    100% {
        opacity: 1;
    }
}

.nav-home ul {
    margin-top: 5%;
    display: flex;
    flex-flow: column wrap;
    list-style: none;
}

.nav-home ul li a {
    display: block;
    padding: 4% 8%;
    color: #eef4ff;
    text-shadow: 0 1px 5px rgba(142, 136, 192, 0.2);
    font-size: 0.97em;
    font-weight: 500;
    text-decoration: none;
    outline: none;
    outline-width: none;
    transition: all 300ms ease-out;
}

.nav-home ul li a .icon {
    float: left;
    margin-top: -1px;
    margin-right: 15px;
}

.nav-home ul li a:hover,
.nav-home ul li a:focus {
    color: var(--backgroundHoverMenu);
    transition: all 200ms ease-in;
}

.nav-home ul li a.active {
    padding: 4% 6.8%;
    color: var(--backgroundMenuActive);
    text-shadow: none;
    border-left: 4px solid var(--backgroundBtnList);
    transition: all 200ms ease-in;
}

.nav-home ul li a:active,
.nav-home ul li a.active:active {
    color: var(--backgroundMenuActive);
    transition: all 200ms ease-in;
}



