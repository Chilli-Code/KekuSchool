    content: "";
    clear: both;
}

.nav-home .user img.image_user {
    display: block;
    width: 50px;
    height: 50px;
    margin: 6% 8%;
    background-color: var(--backgroundBtnList);
    box-shadow: 0 0 6px rgba(142, 136, 192, 0.2);
    border: 3px solid var(--backgroundBtnList);
    border-radius: 10em;
    pointer-events: none;
}

.nav-home .user span.name_user {
    float: left;
    margin: -2% 0 2% 8%;
