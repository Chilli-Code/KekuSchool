    outline: none;
    outline-width: none;
    transition: all 300ms ease-out;
}

.nav-home .user span.logout_user>a:hover,
.nav-home .user span.logout_user>a:focus {
    color: var(--backgroundHoverMenu);
    transition: all 200ms ease-in;
}

.nav-home .user span.logout_user>a+ul {
    display: none;
    position: absolute;
    right: 3%;
